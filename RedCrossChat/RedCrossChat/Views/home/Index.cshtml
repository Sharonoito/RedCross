@model List<ReportVm>

<!-- Content wrapper -->

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Insigts /</span> Dashboard
</h4>

<div class="row">
    @foreach(var report in Model)
    {
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card card-border-shadow-@report.Background h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2 pb-1">
                        <div class="avatar me-2">
                            <span class="avatar-initial rounded bg-label-@report.Background"><i class="bx bxs-truck"></i></span>
                        </div>
                        <h4 class="ms-1 mb-0">@report.Value</h4>
                    </div>
                    <p class="mb-1">@report.Name</p>
                    <p class="mb-0">
                        <span class="fw-medium me-1">@report.Percentage</span>
                        <small class="text-muted">@report.Description</small>
                    </p>
                </div>
            </div>
        </div>
    }
    
    
</div>