    <script>

        $(document).on('submit', "#formAuthentication", function (e) {

            e.preventDefault();

            const form = this;

            $.post("/Auth/ResetPasswordOTP", { email: $("#formAuthentication #email").val() }).then(resp => {

                //resp = JSON.parse(resp) || {}

                $(form).attr("style", "display:none");

                $("#formConfirmOtp").attr("style", "display:inlineblock")

                if (resp.success) {

                } else {
                    Swal.fire({
                        title: "Not Found?",
                        text: resp.message,
                        icon: "question"
                    });

                    //$("#email").val("")
                }

            }).catch(Error => {

            });
        });

        $(document).on('submit', "#formConfirmOtp", function (e) {

            e.preventDefault();

            const form = this;

            $.post("/Auth/ResetPasswordVerify", { email: $("#formAuthentication #email").val(), otp: $("#formConfirmOtp #otp").val() }).then(resp => {
                if (resp.success) {

                    $("#f_token").val(resp.responseData.token);
                    $("#f_otp").val(resp.responseData.otp);
                    $("#f_email").val(resp.responseData.email);

                } else {
                    Swal.fire({
                        title: "Not Found?",
                        text: resp.message,
                        icon: "question"
                    });
                }

                $(form).attr("style", "display:none");

                $("#formResetPassword").attr("style", "display:inlineblock")

            });
        });

        $(document).on('submit', '#formResetPassword', function (e) {
            e.preventDefault();

            const password = $("#password").val();
            const confirmPassword = $("#confirmPassword").val();
            const email = $("#f_email").val();
            const otp = $("#f_otp").val();
            const token = $("#f_otp").val();

            const passwordError = $("#password").next("small");
            const confirmPasswordError = $("#confirmPassword").next("small");

            // Clear previous error messages
            passwordError.text("");
            confirmPasswordError.text("");

            // Password validation criteria
            const hasNumber = /\d/;
            const hasSpecialChar = /[!@@#$%^&*(),.?":{}|<>]/;
            const hasUpperCase = /[A-Z]/;
            const hasLowerCase = /[a-z]/;

            let isValid = true;

            if (password.length < 8) {
                passwordError.text("Password must be at least 8 characters long.");
                isValid = false;
            } else if (!hasNumber.test(password)) {
                passwordError.text("Password must contain at least one number.");
                isValid = false;
            } else if (!hasSpecialChar.test(password)) {
                passwordError.text("Password must contain at least one special character.");
                isValid = false;
            } else if (!hasUpperCase.test(password)) {
                passwordError.text("Password must contain at least one uppercase letter.");
                isValid = false;
            } else if (!hasLowerCase.test(password)) {
                passwordError.text("Password must contain at least one lowercase letter.");
                isValid = false;
            }

            if (confirmPassword !== password) {
                confirmPasswordError.text("Passwords do not match.");
                isValid = false;
            }

            if (!isValid) {
                return; // Exit the function if validation fails
            }

            // If all validations pass, submit the form via AJAX
            $.post("/Auth/ResetConfirmPassword", {
                email: email,
                otp: otp,
                password: password,
                token: token
            }).then(resp => {

                if (resp.success) {
                    // Redirect to the home page on success
                    window.location.href = '/';
                } else {
                    confirmPasswordError.text(resp.message);
                }
            });
        });





    </script>

