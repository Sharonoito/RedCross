                                <input type="hidden" class="form-control" id="f_email" name="f_email" placeholder="****" autofocus="" />
                                <input type="hidden" class="form-control" id="f_token" name="f_token" placeholder="****" autofocus="" />
                            </div>

                            <div class="my-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="******" autofocus="" required />
                                <small class="text-red"></small>
                            </div>
                            <div class="my-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <input type="text" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="******" autofocus="" required />
