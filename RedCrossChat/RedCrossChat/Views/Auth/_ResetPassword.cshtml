@model ProfileVm

@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">@ViewBag.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

@using (Html.BeginForm(actionName: "UpdatePassword", controllerName: "Auth", FormMethod.Post, new { @class = "modal-Crud", data_modal = "resetModal", data_callback = "", data_table = "", autocomplete = "off", @id = "frmClient" }))
