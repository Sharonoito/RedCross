@model QuestionVm

@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">@ViewBag.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

@using (Html.BeginForm(actionName: "SaveQuestion", controllerName: "Conversation", FormMethod.Post, new { @class = "modal-Crud", data_modal = "flowModal", data_callback = "show_questions", data_table = "", autocomplete = "off", @id = "frmQuestion" }))
{



    <div class="modal-body">
        <div class="row">


            <div class="form-group col-lg-12 mb-2">
                <label asp-for="Value"></label>
                <input asp-for="Value" class="form-control" autocomplete="off" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

            <div class="form-group col-lg-12 mb-2">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control">
                    <option value="1">ChoicePrompt</option>
                    <option value="2">Number Prompt</option>
                    <option value="3">Text Prompt</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

           

        </div>

    </div>
    <div class="modal-footer">

        <button type="submit" class="btn btn-primary me-sm-3 me-1 mt-3">Submit</button>
        <button type="reset" class="btn btn-label-secondary btn-reset mt-3" data-bs-dismiss="modal" aria-label="Close">Cancel</button>

    </div>
   
}

