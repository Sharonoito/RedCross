@{
}

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                <i class="fas fa-th-large"></i>
            </a>
        </li>      

        @if (User.Identity.IsAuthenticated)
        {
            <!-- User Profile -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <span class="text-muted mr-1">@User.Identity.Name</span>
                    <i class="fa fa-angle-down"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <a asp-action="lockscreen" asp-controller="auth" class="dropdown-item">
                        <i class="fa fa-lock mr-2"></i> Lock Screen
                    </a>
                    <div class="dropdown-divider"></div>
                    <a id="changePassword"
                        data-toggle="modal"
                        data-viewurl="true"
                        data-action="@Url.Action("changepassword", "auth")"
                        data-target="#changePasswordModal"
                        data-modal="changePasswordModal"
                        class="load-modal dropdown-item">
                        <i class="fa fa-key mr-2"></i> Change Password
                    </a>
                    <div class="dropdown-divider"></div>
                    @using (Html.BeginForm(actionName: "LogOut", controllerName: "Auth", FormMethod.Post, new { id = "LogoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('LogoutForm').submit()" class="dropdown-item">
                            <i class="fa fa-power-off mr-2"></i> Logout
                        </a>
                    }
                </div>
            </li>
        }

    </ul>
</nav>

@if (User.Identity.IsAuthenticated)
{
    <div id="loading-panel" class="ajax-loader-container float-right">
        <img src="~/img/ajax-loader.gif" />
    </div>

    <div class="modal fade" id="changePasswordModal" tabindex="-1" data-keyboard="false" data-backdrop="static" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
}

